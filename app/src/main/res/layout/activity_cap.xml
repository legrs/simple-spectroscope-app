<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CapActivity">

    <!--4072,3052-->
    <!--2036,1526-->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="720dp"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:weightSum="1">


            <TextureView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.17" />

            <TextureView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.83" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/focus_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello Worald!" />

            <SeekBar
                android:id="@+id/focus_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="0"
                android:min="-300" />

            <TextView
                android:id="@+id/iso_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50" />

            <SeekBar
                android:id="@+id/iso_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="15"
                android:min="1" />

            <TextView
                android:id="@+id/expo_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50" />

            <Switch
                android:id="@+id/expo_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="long" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <SeekBar
                android:id="@+id/expo_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:min="0" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/zoomFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ZOOM FOR FOCUSING" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/zoomFP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ZOOM FOR POINTING" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="sequence name" />

                <EditText
                    android:id="@+id/nameText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="capture quantity" />


                <EditText
                    android:id="@+id/qtyText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:ems="10"
                    android:inputType="number"
                    android:text="3" />

            </LinearLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/cap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CAPTURE" />

            <TextView
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="status:" />

            <Button
                android:id="@+id/switch_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SWITCH LINE" />
            <SeekBar
                android:id="@+id/line_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="1000"
                android:min="0" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.5"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:layout_weight="0.14"
            app:srcCompat="@drawable/marker" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"/>

        <ImageView
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:layout_height="0dp"
            android:layout_weight="0.14"
            app:srcCompat="@drawable/markerup" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000000">
        <ImageView
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#FF0000" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
